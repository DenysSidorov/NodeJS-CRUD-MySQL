    body
        .row
            .col-md-6.col-md-offset-3

                form.navbar-form.navbar-left(method='post', novalidate='', role='search' name='formUser')
                    .form-group
                        input#userId.form-control(type='hidden', name='id', value= user.id)
                        label(for='userAge') Name
                            input#userAge.form-control(name='name', type='text', placeholder='Search', value= user.name)
                        label(for='userName') Age
                            input#userName.form-control(name='age', type='text', placeholder='Search', value= user.age)
                        label(for='userIsMarried') Married
                            input#userIsMarried.form-control(name='married', type='text', placeholder='Search', value= user.married)

                        button.btn.btn-default(type='submit') Отправить


                if users
                    p users
                else
                    p not users

                if user
                    p user
                else
                    p not user

                if user.id
                    p user id
                else
                    p not user id